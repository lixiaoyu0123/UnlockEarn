<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/bottom_bar_bg" android:endColor="@color/bottom_bar_bg" android:angle="270.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/bottom_bar_bg" android:endColor="@color/bottom_bar_bg" android:angle="270.0" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/white" android:endColor="@color/white" android:angle="270.0" />
        </shape>
    </item>
</selector>