<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/main_grey_button_pressed" android:endColor="@color/main_grey_button_pressed" android:angle="270.0" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/main_grey_button_pressed" android:endColor="@color/main_grey_button_pressed" android:angle="270.0" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/main_grey_button" android:endColor="@color/main_grey_button" android:angle="270.0" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
</selector>